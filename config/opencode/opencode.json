{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "rm -rf *": "ask",
      "sudo rm -rf *": "ask",
      "chmod -R 777 *": "ask",
      "docker system prune -a": "ask"
    },
    "webfetch": "ask"
  },
  "instructions": [
    "~/.config/opencode/AGENTS.md",
    "CONTRIBUTING.md",
    "README.md",
    "docs/*.md",
    "prompts/*.md"
  ],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:20b": {
          "name": "GPT-OSS 20B",
          "reasoning": true,
          "options": {
            "num_ctx": 32768,
            "temperature": 0.15,
            "top_p": 0.7,
            "repeat_penalty": 1.2
          }
        },
        "deepseek-r1:32b": {
          "name": "DeepSeek-R1 32B",
          "reasoning": true,
          "options": {
            "num_ctx": 32768,
            "temperature": 0.15,
            "top_p": 0.7,
            "repeat_penalty": 1.2
          }
        },
        "gemma3:12b": {
          "name": "Gemma3 12B",
          "reasoning": false,
          "tool_call": false,
          "options": {
            "num_ctx": 32768,
            "temperature": 0.15,
            "top_p": 0.7,
            "repeat_penalty": 1.2
          }
        }
      }
    }
  }
}
