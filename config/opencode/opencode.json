{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "rm -rf *": "ask",
      "sudo rm -rf *": "ask",
      "chmod -R 777 *": "ask",
      "docker system prune -a": "ask"
    },
    "webfetch": "ask"
  },
  "instructions": [
    "~/.config/opencode/AGENTS.md",
    "CONTRIBUTING.md",
    "README.md",
    "docs/*.md",
    "prompts/*.md"
  ],
  "mcp": {
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/alexis.pigeon/repos"
      ],
      "enabled": true,
      "environment": {
        "NODE_ENV": "production"
      }
    },
    "git": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-git"
      ],
      "enabled": true
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen2.5-coder:7b-32k": {
          "name": "Qwen2.5 Coder 7B (32K Context)",
          "reasoning": true,
          "options": {
            "num_ctx": 32768,
            "temperature": 0.15,
            "top_p": 0.7,
            "repeat_penalty": 1.2
          }
        }
      }
    }
  }
}
